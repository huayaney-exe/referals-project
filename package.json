{
  "name": "loyalty-platform-peru",
  "version": "1.0.0",
  "description": "AI-powered digital loyalty platform for Peruvian SMBs",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "test": "jest --coverage --runInBand",
    "test:unit": "jest --testPathPattern=tests/unit --runInBand",
    "test:integration": "jest --testPathPattern=tests/integration --runInBand",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:watch": "jest --watch",
    "lint": "eslint 'src/**/*.ts' 'tests/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' 'tests/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "loyalty",
    "peru",
    "sme",
    "digital-stamps"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "nock": "^14.0.10",
    "prettier": "^3.1.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@sentry/node": "^10.17.0",
    "@sentry/profiling-node": "^10.17.0",
    "@supabase/supabase-js": "^2.39.3",
    "@types/multer": "^2.0.0",
    "@types/qrcode": "^1.5.5",
    "axios": "^1.12.2",
    "bull": "^4.12.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.3.2",
    "multer": "^2.0.2",
    "qrcode": "^1.5.4",
    "redis": "^4.6.12",
    "twilio": "^4.23.0",
    "uuid": "^13.0.0",
    "winston": "^3.18.3",
    "zod": "^3.25.76"
  }
}

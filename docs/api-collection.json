{
  "info": {
    "name": "Loyalty Platform Peru API",
    "description": "Complete API collection for the Digital Loyalty Platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register Business",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"business@example.com\",\n  \"password\": \"SecurePass123!\",\n  \"businessName\": \"Mi Negocio\",\n  \"phone\": \"+51987654321\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"business@example.com\",\n  \"password\": \"SecurePass123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Enrollments",
      "item": [
        {
          "name": "Enroll Customer",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Juan Pérez\",\n  \"phone\": \"+51912345678\",\n  \"business_id\": \"{{business_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/enrollments",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "enrollments"]
            }
          }
        },
        {
          "name": "Check Existing Customer",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/v1/enrollments/check?business_id={{business_id}}&phone=+51912345678",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "enrollments", "check"],
              "query": [
                {
                  "key": "business_id",
                  "value": "{{business_id}}"
                },
                {
                  "key": "phone",
                  "value": "+51912345678"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Stamps",
      "item": [
        {
          "name": "Add Stamp",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customer_id\": \"{{customer_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/stamps",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "stamps"]
            }
          }
        }
      ]
    },
    {
      "name": "Customers",
      "item": [
        {
          "name": "List Customers",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}"
                }
              ]
            },
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/v1/customers",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "customers"]
            }
          }
        },
        {
          "name": "Get Customer by ID",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}"
                }
              ]
            },
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/v1/customers/{{customer_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "customers", "{{customer_id}}"]
            }
          }
        },
        {
          "name": "Search Customers",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}"
                }
              ]
            },
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/v1/customers?search=912345678",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "customers"],
              "query": [
                {
                  "key": "search",
                  "value": "912345678"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Campaigns",
      "item": [
        {
          "name": "Create Campaign",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Promoción de Verano\",\n  \"message\": \"¡Hola {{name}}! Tienes {{stamps_count}} sellos. ¡Sigue acumulando!\",\n  \"target_segment\": {\n    \"min_stamps\": 5,\n    \"max_stamps\": null\n  },\n  \"scheduled_for\": \"2025-12-31T12:00:00Z\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/campaigns",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "campaigns"]
            }
          }
        },
        {
          "name": "List Campaigns",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}"
                }
              ]
            },
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/v1/campaigns",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "campaigns"]
            }
          }
        },
        {
          "name": "Get Campaign",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}"
                }
              ]
            },
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/v1/campaigns/{{campaign_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "campaigns", "{{campaign_id}}"]
            }
          }
        },
        {
          "name": "Activate Campaign",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}"
                }
              ]
            },
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"scheduled_for\": \"2025-12-31T12:00:00Z\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/campaigns/{{campaign_id}}/activate",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "campaigns", "{{campaign_id}}", "activate"]
            }
          }
        },
        {
          "name": "Delete Campaign",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}"
                }
              ]
            },
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/api/v1/campaigns/{{campaign_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "campaigns", "{{campaign_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Analytics",
      "item": [
